<div class="row justify-content-center mt-3">
  <div class="col-12 col-xl-8">

    <div class="container row justify-content-center">
      <div class="col-12 col-md-6">

        <div class="card">
          <div class="card-header"> <%= t('.all_badges') %> </div>

          <div class="card-body">
            <div class="card-text">
              <ul class="list-group">
                <%= render @badges, description: true %>
              </ul>
            </div>
          </div>
        </div>

      </div>
      <div class="col-12 col-md-6">

        <div class="card">
          <div class="card-header">
            <%= t('.users_badges') %>
            <span class="badge badge-secondary"><%= t('.count') %></span>
          </div>

          <div class="card-body">
            <div class="card-text">
              <%= render  @users_badges,
                          description: false,
                          count: @users_badges_counts %>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
