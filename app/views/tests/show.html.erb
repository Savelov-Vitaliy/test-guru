<h3>Test <%= @test.id %></h3>

<table border=1 rules=cols cellpadding=10 cellspacing=0 >
  <tr style="border-bottom: 1px solid black; font-weight: 600;">
    <th>Title</th>
    <th>Level</th>
    <th>Category</th>
    <th>Author</th>
    <th>Questions</th>
    <th colspan=4>Actions</th>
  </tr>

  <%= render @test %>
</table>

<h3>Questions</h3>

<table border=1 rules=cols cellpadding=10 cellspacing=0 >
  <tr style="border-bottom: 1px solid black; font-weight: 600;">
    <th>Id</th>
    <th>Body</th>
    <th colspan=3>Actions</th>
  </tr>

  <%= render @test.questions %>
</table>

<br>
