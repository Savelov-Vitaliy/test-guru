<h1>Test <%= @test.id %></h1>

<table border=1 rules=cols cellpadding=10 cellspacing=0 >
  <tr style="border-bottom: 1px solid black; font-weight: 600;">
    <th>Title</th>
    <th>Level</th>
    <th>Category</th>
    <th>Author</th>
    <th>Questions</th>
    <th colspan=3>Actions</th>
  </tr>

  <%= render @test %>
</table>

<h2>Questions</h2>

<table border=1 rules=cols cellpadding=10 cellspacing=0 >
  <tr style="border-bottom: 1px solid black; font-weight: 600;">
    <th>Id</th>
    <th>Body</th>
    <th colspan=3>Actions</th>
  </tr>

  <%= render @test.questions %>
</table>

<br>
<%= notice %>
<br>

<%= link_to 'All Tests list', tests_path %> .
<%= link_to 'Create new Question', new_test_question_path(@test) %> .
