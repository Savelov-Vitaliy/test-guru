<h3> <%= "#{t('.test')}  #{@test.id}" %></h3>

<table border=1 rules=cols cellpadding=10 cellspacing=0 >
  <tr style="border-bottom: 1px solid black; font-weight: 600;">
    <th> <%= t('.title') %> </th>
    <th> <%= t('.level') %> </th>
    <th> <%= t('.category') %> </th>
    <th> <%= t('.author') %> </th>
    <th> <%= t('.questions') %> </th>
    <th colspan=4> <%= t('.actions') %> </th>
  </tr>

  <%= render @test %>
</table>

<h3> <%= t('.questions') %> </h3>

<table border=1 rules=cols cellpadding=10 cellspacing=0 >
  <tr style="border-bottom: 1px solid black; font-weight: 600;">
    <th> <%= t('.id') %> </th>
    <th> <%= t('.body') %> </th>
    <th colspan=3> <%= t('.actions') %> </th>
  </tr>

  <%= render @test.questions %>

</table>

