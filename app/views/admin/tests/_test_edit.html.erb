<tr>
  <td class='align-middle' >
    <%= content_tag :span, test.title %>
  </td>
  <td class='align-middle' ><%= test_level(test) %></td>
  <td class='align-middle' ><%= test.category.title %></td>
  <td class='align-middle' ><%= test.author.name %></td>
  <td class='align-middle' ><%= test.questions.count %></td>
  <td class='align-middle' ><%= link_to t('.show'), admin_test_path(test), class: "text-primary" %></td>
  <td class='align-middle' >
    <%= link_to t('.edit'),
                edit_admin_test_path(test),
                class: "text-success" %>
  </td>
  <td class='align-middle' >
    <%= link_to t('.delete'),
            admin_test_path(test),
            method: :delete,
            data: { confirm: t('.confirmation')}, class: "text-danger" %>
  </td>
</tr>
