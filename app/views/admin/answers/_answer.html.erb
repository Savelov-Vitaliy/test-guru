<tr>
  <td><%= answer.id %></td>
  <td><%= answer.body %></td>
  <td><%= link_to t('.show'), admin_answer_path(answer), class: "text-primary" %></td>
  <td><%= link_to t('.edit'), edit_admin_answer_path(answer), class: "text-success" %></td>
  <td><%= link_to t('.delete'),
              admin_answer_path(answer),
              method: :delete,
              data: { confirm: t('.confirmation') }, class: "text-danger"  %>
  </td>
</tr>
