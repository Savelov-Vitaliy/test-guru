<tr>
  <td><%= question.id %></td>
  <td><%= question.body %></td>
  <td><%= link_to t('.show'), admin_question_path(question), class: "text-primary" %></td>
  <td><%= link_to t('.edit'), edit_admin_question_path(question), class: "text-success" %></td>
  <td><%= link_to t('.delete'),
            admin_question_path(question),
            method: :delete,
            data: { confirm: t('.confirmation')}, class: "text-danger" %>
  </td>
</tr>
