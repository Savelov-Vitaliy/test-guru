<div class="row justify-content-center mt-3">
  <div class="col-auto">

        <h2> <%= t('.title') %></h2>
    <div class="card">
      <div class="card-body card-text">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">

            <%= f.label :first_name, t('.first_name') %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>

            <%= f.label :last_name, t('.last_name') %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>

            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>

            <%= f.label :password, t('.password') %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

            <%= f.label :password_confirmation, t('.password_confirmation') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

            <%= octicon 'alert', class: 'text-danger hide' %>
            <%= octicon 'check', class: 'text-success hide' %>

            <div class="text-right mt-3">
              <%= f.submit t('.submit'), class: "btn btn-primary"%>
            </div>

          </div>
        <% end %>
      </div>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>
