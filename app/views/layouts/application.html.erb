<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p class="nav user">
        <%= link_to "Test Guru", root_path %>.
        Welcome, <b><%= current_user.first_name %> <%= current_user.last_name %></b> Guru.

        <% if @admin %>
          <%= link_to "Admin Panel", admin_tests_path %>.
        <% end %>

        <%= link_to "Exit",
                    destroy_user_session_path,
                    method: :delete,
                    data: { confirm: "Exit. Are you sure?"} %>
      </p>
    <% end %>

    <%= render "shared/flash" %>

    <div style='margin:2% 30%;'>
    <h1><%= link_to 'Test Guru', root_path %> </h1>

    <%= yield %>

    </div>

    <%= render "shared/footer" %>

  </body>
</html>
